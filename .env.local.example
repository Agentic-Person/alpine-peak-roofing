# Alpine Peak Roofing - Environment Variables Template
# Copy this file to .env.local and replace with your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_ACCESS_TOKEN=your_supabase_access_token_here
SUPABASE_DATABASE_PASSWORD=your_database_password_here

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# CMS API Key for blog publishing
CMS_API_KEY=your_cms_api_key_here

# Google Maps API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# n8n Configuration
N8N_WEBHOOK_URL=https://your-n8n-instance.app.n8n.cloud/webhook/alpine-peak-chatbot
N8N_API_KEY=your_n8n_api_key_here

# n8n MCP Server Configuration
N8N_MCP_SERVER_URL=https://your-n8n-instance.app.n8n.cloud/workflow/WorkflowId
N8N_MCP_BEARER_TOKEN=your_n8n_mcp_bearer_token_here
N8N_COMMUNITY_PACKAGES_ALLOW_TOOL_USAGE=true

# GitHub Personal Access Token
GITHUB_PERSONAL_ACCESS_TOKEN=github_pat_your_github_token_here

# n8n Webhook Endpoints
N8N_WEBHOOK_CHATBOT=https://your-n8n-instance.app.n8n.cloud/workflow/WorkflowId
N8N_WEBHOOK_LEAD_CAPTURE=http://localhost:5678/webhook/lead-capture
N8N_WEBHOOK_BLOG_GENERATION=http://localhost:5678/webhook/blog-generation
N8N_WEBHOOK_ROOF_ESTIMATION=http://localhost:5678/webhook/roof-estimation

# Email Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here

# SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# SECURITY NOTES:
# 1. NEVER use NEXT_PUBLIC_ prefix for sensitive data (OpenAI keys, service role keys, etc.)
# 2. NEXT_PUBLIC_ variables are exposed to the browser - only use for non-sensitive config
# 3. Service role keys have admin access - keep them server-side only
# 4. Always use environment variables, never hardcode secrets in source code
# 5. This .env.local.example file is safe to commit - it contains no real secrets